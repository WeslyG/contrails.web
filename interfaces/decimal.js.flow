        constructor(value: string): Decimal;

        lessThan(value: Decimal | number): boolean;
        isNegative(): boolean;
        absoluteValue(): Decimal;
        round(): Decimal;
        add(value: Decimal | number): Decimal;
        plus(value: Decimal | number): Decimal;
        minus(value: Decimal | number): Decimal;
        mul(value: Decimal | number): Decimal;
        div(value: Decimal | number): Decimal;
        mod(value: Decimal | number): Decimal;
        isZero(): boolean;
        toNumber(): number;
